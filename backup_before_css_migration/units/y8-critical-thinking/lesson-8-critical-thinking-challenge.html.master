<script>
// Interactive elements for digital version
document.addEventListener('DOMContentLoaded', function() {
    // Add selection functionality for issue cards
    const issueCards = document.querySelectorAll('.issue-card');
    issueCards.forEach((card, index) => {
        card.style.cursor = 'pointer';
        card.addEventListener('click', function() {
            // Remove previous selections
            issueCards.forEach(c => {
                c.style.border = '1px solid #dee2e6';
                c.style.backgroundColor = 'white';
            });
            
            // Highlight selected card
            this.style.border = '3px solid #28a745';
            this.style.backgroundColor = '#f8fff9';
            
            // Store selection
            localStorage.setItem('selectedIssue', index);
        });
    });
    
    // Add selection functionality for assessment options
    const assessmentOptions = document.querySelectorAll('.assessment-option');
    assessmentOptions.forEach((option, index) => {
        option.style.cursor = 'pointer';
        option.addEventListener('click', function() {
            // Remove previous selections
            assessmentOptions.forEach(o => {
                o.style.border = '2px solid #28a745';
                o.style.backgroundColor = '#f8f9fa';
            });
            
            // Highlight selected option
            this.style.border = '3px solid #dc3545';
            this.style.backgroundColor = '#fff5f5';
            
            // Store selection
            localStorage.setItem('selectedAssessment', index);
        });
    });
    
    // Add progress tracking for research phases
    const phases = document.querySelectorAll('.challenge-phase');
    phases.forEach((phase, index) => {
        const checkbox = document.createElement('input');
        checkbox.type = 'checkbox';
        checkbox.style.marginRight = '10px';
        checkbox.addEventListener('change', function() {
            if (this.checked) {
                phase.style.backgroundColor = '#c8e6c9';
            } else {
                phase.style.backgroundColor = '#e3f2fd';
            }
        });
        
        const title = phase.querySelector('h4');
        title.insertBefore(checkbox, title.firstChild);
    });
    
    });
</script>


