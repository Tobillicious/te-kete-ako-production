    <script>
        function toggleItem(checkbox) {
            const item = checkbox.closest('.checklist-item');
            if (checkbox.checked) {
                item.classList.add('completed');
            } else {
                item.classList.remove('completed');
            }
            
            // Save progress to localStorage
            const checkedItems = Array.from(document.querySelectorAll('.checkbox-custom:checked'))
                .map(cb => cb.id);
            localStorage.setItem('betaChecklistProgress', JSON.stringify(checkedItems));
        }

        // Load progress on page load
        window.addEventListener('load', () => {
            const saved = localStorage.getItem('betaChecklistProgress');
            if (saved) {
                const checkedItems = JSON.parse(saved);
                checkedItems.forEach(id => {
                    const checkbox = document.getElementById(id);
                    if (checkbox) {
                        checkbox.checked = true;
                        toggleItem(checkbox);
                    }
                });
            }
        });
    </script>

