    <script>
        // Simple drag-and-drop implementation
        document.addEventListener('DOMContentLoaded', () => {
            const suggestions = document.querySelectorAll('.suggestion-item');
            const slots = document.querySelectorAll('.lesson-slot');

            suggestions.forEach(item => {
                item.addEventListener('dragstart', (e) => {
                    e.dataTransfer.setData('text/html', item.innerHTML);
                });
            });

            slots.forEach(slot => {
                slot.addEventListener('dragover', (e) => {
                    e.preventDefault();
                    slot.style.background = '#dbeafe';
                });

                slot.addEventListener('dragleave', () => {
                    slot.style.background = '';
                });

                slot.addEventListener('drop', (e) => {
                    e.preventDefault();
                    const data = e.dataTransfer.getData('text/html');
                    slot.innerHTML = `<div class="lesson-card">${data}</div>`;
                    slot.classList.add('filled');
                    slot.style.background = '';
                    
                    // Show linked resources
                    loadLinkedResources(slot);
                });
            });
        });

        async function loadLinkedResources(slot) {
            // GraphRAG would suggest handouts, assessments automatically
            const linkedResources = document.createElement('div');
            linkedResources.innerHTML = `
                <div style="margin-top: 0.5rem; padding: 0.5rem; background: #f0fdf4; border-radius: 6px; font-size: 0.75rem;">
                    ðŸ§  <strong>GraphRAG Suggests:</strong>
                    <div style="margin-top: 0.25rem;">
                        â€¢ Handout available
                        â€¢ Assessment rubric linked
                        â€¢ Related game found
                    </div>
                </div>
            `;
            slot.appendChild(linkedResources);
        }

        function exportToPDF() {
            window.print();
        }

        async function saveToGraphRAG() {
            alert('Plan saved to GraphRAG! You can access it from any device.');
            // Would save to Supabase with teacher_plans table
        }
    </script>

