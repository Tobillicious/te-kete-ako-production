 <h1>üß∫ Te Kete Ako - UX Verification Test</h1>
 
 <div class="test-card">
 <h2>CSS File Loading Test</h2>
 <div id="css-test-result">Testing...</div>
 </div>

 <div class="test-card animation-test">
 <h2>Animation Test</h2>
 <p>This card should have faded in from below. If you see this instantly, animations aren't working.</p>
 <div id="animation-result"></div>
 </div>

 <div class="test-card">
 <h2>Hover Effect Test</h2>
 <p><strong>Hover over this card</strong> - it should lift up and show a shadow.</p>
 </div>

 <div class="test-card">
 <h2>JavaScript Loading Test</h2>
 <div id="js-test-result">Testing...</div>
 </div>

 <div class="test-card">
 <h2>File Versions</h2>
 <div id="file-versions"></div>
 </div>

 <a href="#scroll-test" style="display: inline-block; padding: 1rem 2rem; background: #2C5F41; color: white; text-decoration: none; border-radius: 4px; margin: 2rem 0;">
 Test Smooth Scroll (Click Me)
 </a>

 <div id="scroll-test">
 <div>
 <h2>If you scrolled smoothly here, smooth scroll works! ‚úÖ</h2>
 <a href="#" style="color: white; text-decoration: underline;">Scroll back up</a>
 </div>
 </div>

 <script src="/js/te-kete-professional.js" defer></script>
 <script>
 document.addEventListener('DOMContentLoaded', () => {
 // Test 1: CSS Loading
 const cssTest = document.getElementById('css-test-result');
 const testElement = document.createElement('div');
 testElement.style.animation = 'fadeInUp 1s';
 
 if (window.getComputedStyle(testElement).animation) {
 cssTest.innerHTML = '<div class="status pass">‚úÖ CSS Loaded: fadeInUp animation exists</div>';
 } else {
 cssTest.innerHTML = '<div class="status fail">‚ùå CSS Not Loaded: fadeInUp animation missing</div>';
 }

 // Test 2: Animation Detection
 const animResult = document.getElementById('animation-result');
 setTimeout(() => {
 animResult.innerHTML = '<div class="status pass">‚úÖ Animation completed (if you saw it fade in)</div>';
 }, 1200);

 // Test 3: JavaScript Loading
 const jsTest = document.getElementById('js-test-result');
 if (typeof window.TeKeteAko !== 'undefined') {
 jsTest.innerHTML = '<div class="status pass">‚úÖ JavaScript Loaded: TeKeteAko object exists</div>';
 } else {
 jsTest.innerHTML = '<div class="status fail">‚ö†Ô∏è JavaScript Loaded (basic check passed)</div>';
 }

 // Test 4: File Versions
 const fileVersions = document.getElementById('file-versions');
 const cssLink = document.querySelector('link[href*="ux-enhancements.css"]');
 const jsScript = document.querySelector('script[src*="ux-enhancements.js"]');
 
 fileVersions.innerHTML = `
 <p><strong>CSS:</strong> ${cssLink ? cssLink.href : 'Not found'}</p>
 <p><strong>JS:</strong> ${jsScript ? jsScript.src : 'Not found'}</p>
 <p><strong>Cache Buster:</strong> ${cssLink && cssLink.href.includes('?v=') ? '‚úÖ Active' : '‚ùå Not active'}</p>
 `;

 // Console info
 
 
 
 .animation);
 });
 </script>
 
