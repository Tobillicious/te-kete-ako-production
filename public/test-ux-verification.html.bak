 }
 .status {
 padding: 0.5rem 1rem;
 border-radius: 4px;
 margin: 0.5rem 0;
 font-weight: 600;
 }
 .status.pass { background: #4CAF50; color: white; }
 .status.fail { background: #f44336; color: white; }
 .animation-test {
 animation: fadeInUp 1s ease;
 }
 #scroll-test {
 height: 100vh;
 display: flex;
 align-items: center;
