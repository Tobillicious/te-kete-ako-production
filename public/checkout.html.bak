    <style>
        .checkout-container {
            max-width: 800px;
            margin: 3rem auto;
            padding: 0 1rem;
        }
        .checkout-card {
            background: white;
            border-radius: 24px;
            padding: 3rem;
            box-shadow: 0 8px 32px rgba(0,0,0,0.1);
        }
        .form-field {
            margin-bottom: 1.5rem;
        }
        .form-field label {
            display: block;
            font-weight: 600;
            margin-bottom: 0.5rem;
            color: #1a4d2e;
        }
        .form-field input,
        .form-field select {
            width: 100%;
            padding: 1rem;
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }
        .form-field input:focus,
        .form-field select:focus {
            outline: none;
            border-color: #059669;
            box-shadow: 0 0 0 3px rgba(5,150,105,0.1);
        }
        .checkout-button {
            background: linear-gradient(135deg, #059669 0%, #0284c7 100%);
            color: white;
            padding: 1.25rem 2rem;
            border-radius: 12px;
            font-weight: 600;
            font-size: 1.1rem;
            border: none;
            cursor: pointer;
            width: 100%;
            transition: all 0.3s ease;
        }
        .checkout-button:hover:not(:disabled) {
            transform: translateY(-2px);
            box-shadow: 0 8px 24px rgba(5,150,105,0.4);
        }
        .checkout-button:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        .order-summary {
            background: linear-gradient(135deg, #f0fdf4 0%, #dbeafe 100%);
            padding: 2rem;
            border-radius: 16px;
            margin-bottom: 2rem;
        }
        .price-line {
            display: flex;
            justify-content: space-between;
            margin: 1rem 0;
            font-size: 1.1rem;
        }
        .total-line {
            border-top: 2px solid #059669;
            padding-top: 1rem;
            margin-top: 1rem;
            font-weight: 700;
            font-size: 1.5rem;
        }
        .secure-badge {
            text-align: center;
            color: #059669;
            margin-top: 2rem;
        }
        #card-element {
            padding: 1rem;
            border: 2px solid #e5e7eb;
            border-radius: 12px;
        }
        #card-errors {
            color: #dc2626;
            margin-top: 0.5rem;
        }
    </style>
<!-- Professional Design System -->
<link rel="stylesheet" href="/css/te-kete-professional.css"></head>
<body class="bg-gradient-to-br from-green-50 to-blue-50 pattern-koru-subtle"> 
 <!-- üé® ULTIMATE BEAUTY: Navigation -->
