 </script>
    <!-- Include Navigation -->
    <div id="navigation-container"></div>

    <!-- Hero Section -->
    <section class="enterprise-hero">
        <div class="container">
            <h1 style="font-size: 3rem; margin-bottom: 1rem;">üè´ Enterprise SSO</h1>
            <p style="font-size: 1.2rem; opacity: 0.9;">
                Seamless integration with school management systems
            </p>
        </div>
    </section>

    <!-- Enterprise Grid -->
    <section>
        <div class="container">
            <div class="enterprise-grid">
                
                <!-- SSO Schools -->
                <div class="enterprise-card">
                    <h3>üîê Single Sign-On</h3>
                    <p>Access Te Kete Ako through your school's existing authentication system</p>
                    
                    <div class="sso-schools">
                        <div class="sso-school">
                            <h4>Auckland Grammar School</h4>
                            <p>Integrated with school Active Directory</p>
                            <button class="sso-login-btn" data-school-id="auckland-grammar">
                                Login with SSO
                            </button>
                        </div>
                        
                        <div class="sso-school">
                            <h4>Wellington College</h4>
                            <p>Microsoft 365 integration</p>
                            <button class="sso-login-btn" data-school-id="wellington-college">
                                Login with SSO
                            </button>
                        </div>
                        
                        <div class="sso-school">
                            <h4>Christchurch Boys High</h4>
                            <p>Google Workspace integration</p>
                            <button class="sso-login-btn" data-school-id="christchurch-boys">
                                Login with SSO
                            </button>
                        </div>
                    </div>
                </div>

                <!-- School Configuration -->
                <div class="enterprise-card">
                    <h3>‚öôÔ∏è School Configuration</h3>
                    <p>Configure SAML SSO for your school</p>
                    
                    <form id="school-config-form">
                        <div class="form-group">
                            <label for="schoolName">School Name</label>
                            <input type="text" id="schoolName" name="schoolName" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="ssoUrl">SSO URL</label>
                            <input type="url" id="ssoUrl" name="ssoUrl" placeholder="https://your-school.school.nz/saml/sso" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="entityId">Entity ID</label>
                            <input type="text" id="entityId" name="entityId" placeholder="https://your-school.school.nz/saml/metadata" required>
                        </div>
                        
                        <div class="form-group">
                            <label for="certificate">X.509 Certificate</label>
                            <textarea id="certificate" name="certificate" rows="4" placeholder="-----BEGIN CERTIFICATE-----..." required></textarea>
                        </div>
                        
                        <div class="form-group">
                            <label for="contactEmail">Contact Email</label>
                            <input type="email" id="contactEmail" name="contactEmail" required>
                        </div>
                        
                        <button type="submit" style="width: 100%; background: #059669; color: white; border: none; padding: 1rem; border-radius: 8px; font-size: 1.1rem; font-weight: 600; cursor: pointer;">
                            Save Configuration
                        </button>
                    </form>
                </div>

                <!-- Bulk Operations -->
                <div class="enterprise-card">
                    <h3>üìä Bulk Operations</h3>
                    <p>Manage users and resources at scale</p>
                    
                    <div class="bulk-operations">
                        <h4>Bulk User Import</h4>
                        <p>Import users from CSV file</p>
                        <input type="file" id="bulk-user-import" accept=".csv" style="margin: 1rem 0;">
                        <p style="font-size: 0.9rem; color: #6b7280;">
                            CSV format: email,name,role,department
                        </p>
                    </div>
                    
                    <div class="bulk-operations">
                        <h4>Bulk Resource Assignment</h4>
                        <p>Assign resources to multiple classes</p>
                        <button style="background: #059669; color: white; border: none; padding: 0.75rem 1.5rem; border-radius: 8px; cursor: pointer;">
                            Start Bulk Assignment
                        </button>
                    </div>
                </div>

                <!-- User Management -->
                <div class="enterprise-card">
                    <h3>üë• User Management</h3>
                    <p>Manage school users and permissions</p>
                    
                    <div class="user-management">
                        <h4>Active Users</h4>
                        <div class="user-list">
                            <div class="user-item">
                                <div class="user-info">
                                    <div class="user-name">Sarah Johnson</div>
                                    <div class="user-email">sarah.johnson@ags.school.nz</div>
                                </div>
                                <div style="display: flex; align-items: center;">
                                    <span class="user-role">Teacher</span>
                                    <button class="role-update-btn" data-user-id="1" data-new-role="admin">
                                        Make Admin
                                    </button>
                                </div>
                            </div>
                            
                            <div class="user-item">
                                <div class="user-info">
                                    <div class="user-name">Mike Chen</div>
                                    <div class="user-email">mike.chen@ags.school.nz</div>
                                </div>
                                <div style="display: flex; align-items: center;">
                                    <span class="user-role">Admin</span>
                                    <button class="role-update-btn" data-user-id="2" data-new-role="teacher">
                                        Make Teacher
                                    </button>
                                </div>
                            </div>
                            
                            <div class="user-item">
                                <div class="user-info">
                                    <div class="user-name">Emma Wilson</div>
                                    <div class="user-email">emma.wilson@ags.school.nz</div>
                                </div>
                                <div style="display: flex; align-items: center;">
                                    <span class="user-role">Teacher</span>
                                    <button class="role-update-btn" data-user-id="3" data-new-role="admin">
                                        Make Admin
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </section>

