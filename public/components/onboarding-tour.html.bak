<script>
// Onboarding Tour Logic
const ONBOARDING_STORAGE_KEY = 'te-kete-onboarding-completed';

function closeOnboarding() {
    const overlay = document.getElementById('onboarding-overlay');
    if (overlay) {
        overlay.classList.remove('active');
        localStorage.setItem(ONBOARDING_STORAGE_KEY, 'true');
    }
}

function showOnboarding() {
    const overlay = document.getElementById('onboarding-overlay');
    if (overlay) {
        overlay.classList.add('active');
    }
}

// Auto-show on first visit (2 second delay for page to load)
function initOnboarding() {
    const hasSeenOnboarding = localStorage.getItem(ONBOARDING_STORAGE_KEY);
    
    // Only show for first-time visitors on homepage
    const isHomepage = window.location.pathname === '/' || window.location.pathname === '/index.html';
    
    if (!hasSeenOnboarding && isHomepage) {
        setTimeout(showOnboarding, 2000);
    }
}

// Initialize when DOM ready
if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initOnboarding);
} else {
    initOnboarding();
}

// Close when clicking outside card
document.getElementById('onboarding-overlay')?.addEventListener('click', function(e) {
    if (e.target === this) {
        closeOnboarding();
    }
});

// Keyboard support (ESC to close)
document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
        closeOnboarding();
    }
});

// Expose functions globally
window.showOnboarding = showOnboarding;
window.closeOnboarding = closeOnboarding;
</script>
